<Window x:Class="EHP.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EHP"
        mc:Ignorable="d"
        Title="EHP - Help!" Height="130" Width="370"
        ResizeMode="CanMinimize" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="If you encounter any problems, please open a github issue or &#xD;&#xA;contact me over email!" HorizontalAlignment="Left" Margin="10,10,-18,0" VerticalAlignment="Top" Width="372"/>
        <Button Name="ButtonClose" Content="Close" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClose_Click"/>
        <Button Name="ButtonGitHub" Content="GitHub" HorizontalAlignment="Left" Margin="142,64,0,0" VerticalAlignment="Top" Width="75" Click="ButtonGitHub_Click"/>
        <Button Name="ButtonMail" Content="Mail" HorizontalAlignment="Left" Margin="267,64,0,0" VerticalAlignment="Top" Width="75" Click="ButtonMail_Click"/>
    </Grid>
</Window>
